@using WebClient.Models;
@model ProductsModel
@{
    ViewBag.Title = "Index";
}

<h2>Ürün Listesi</h2>
<table class="table">
    <thead>
        <tr>
            <th>Ürün Id</th>
            <th>Ürün Ad</th>
            <th>Ürün Fiyat</th>
            <th>Detay</th>
            <th>Güncelle</th>
            <th>Sil</th>
        </tr>
    </thead>
    <tbody>
       
            @foreach (var item in Model.plist)
            {
                <tr>
                    <td>@item.UrunID</td>
                    <td>@item.UrunAd</td>
                    <td>@string.Format("{0:c}", item.UrunFiyat)</td>
                    <td><a href="/Home/Detay/@item.UrunID">Detay</a></td>
                    <td><a href="/Home/Guncelle/@item.UrunID">Güncelle</a></td>
                    <td><a href="/Home/Sil/@item.UrunID">Sil</a></td>
                </tr>
            }

       
    </tbody>
</table>

